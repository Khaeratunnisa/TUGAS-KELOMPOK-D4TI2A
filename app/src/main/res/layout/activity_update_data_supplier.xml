<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hera.tugaskelompok.UpdateDataSupplier">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_idspl"
        android:layout_below="@+id/textView73"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Id Supplier"
        android:inputType="number"
        android:maxLength="6" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_nmspl"
        android:layout_below="@+id/editText_idspl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nama Supplier"
        android:maxLength="30"
        android:inputType="textPersonName" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_almspl"
        android:layout_below="@+id/editText_nmspl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Alamat Supplier"
        android:inputType="text"
        android:maxLength="50" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_tlpspl"
        android:layout_below="@+id/editText_almspl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Telpon Supplier"
        android:maxLength="13"
        android:inputType="phone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Update Data Supplier"
        android:id="@+id/textView73"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/button_update22"
        android:layout_alignTop="@+id/button_kembali22"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:id="@+id/button_kembali22"
        android:layout_below="@+id/editText_tlpspl"
        android:layout_alignEnd="@+id/editText_tlpspl" />



</RelativeLayout>
